<div class="col-md-6 portfolio-item log-in-form">
    <h3>
        <a href="#">Reset Password</a>
    </h3>
    <p>Enter email</p>
    <form method="post" action="/users/reset">
      <label>Email</label><br>
      <input type='email' name="email"><br>
			<br><%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
      <%= recaptcha_tags %>
      <input type='submit' class='btn-md btn-warning submit-btn'>
    </form>
</div>