<div class="library-div">
<h3>Your library</h3>
<p>User = <%= @user.email %></p>

<h2><u>Your Albums</u></h2>
<%  if @user_albums.length > 0 %>
	<% @user_albums.each do |album| %>
		<h3 style="text-align:left"><%=album.name%></h3>
		<p class="generate-album-link"><a href="" class="submit-btn" >Generate Download Link</a></p>
		<div class="album-link-box">
			<h2>Available download formats</h2>
			<% if album.mp3_file_name %>
		    <form  name='generate_mp3' action='/users/<%= @user.id %>' class="generate-form" >
		      <div>
		          <input type='hidden' name='mp3_album_id' value=<%=album.id%>>
		          <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
		          <input type="image" name="mp3_img" src="/images/mp3.png" border="0" alt="Submit" class="generate-download-btn"/>
		      </div>
		    	<label><%= filesize(album.mp3_file_size) %></label>
		    </form>
			<% end %>
			<% if album.ogg_file_name %>
		    <form  name='generate_ogg' action='/users/<%= @user.id %>' class="generate-form" >
		      <div>
		          <input type='hidden' name='ogg_album_id' value=<%=album.id%>>
		          <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
		          <input type="image" name="ogg_img" src="/images/ogg.png" border="0" alt="Submit" class="generate-download-btn"/>
		      </div>
		    	<label><%= filesize(album.ogg_file_size) %></label>
		    </form>
			<% end %>
			<% if album.aac_file_name %>
		    <form  name='generate_aac' action='/users/<%= @user.id %>' class="generate-form" >
		      <div>
		          <input type='hidden' name='aac_album_id' value=<%=album.id%>>
		          <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
		          <input type="image" name="aac_img" src="/images/aac.png" border="0" alt="Submit" class="generate-download-btn"/>
		      </div>
		    	<label><%= filesize(album.aac_file_size) %></label>
		    </form>
			<% end %>
			<% if album.alac_file_name %>
		    <form  name='generate_alac' action='/users/<%= @user.id %>' class="generate-form" >
		      <div>
		          <input type='hidden' name='alac_album_id' value=<%=album.id%>>
		          <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
		          <input type="image" name="alac_img" src="/images/alac.png" border="0" alt="Submit" class="generate-download-btn"/>
		      </div>
		    	<label><%= filesize(album.alac_file_size) %></label>
		    </form>
			<% end %>
			<% if album.flac_file_name %>
		    <form  name='generate_flac' action='/users/<%= @user.id %>' class="generate-form" >
		      <div>
		          <input type='hidden' name='flac_album_id' value=<%=album.id%>>
		          <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
		          <input type="image" name="flac_img" src="/images/flac.png" border="0" alt="Submit" class="generate-download-btn"/>
		      </div>
		    	<label><%= filesize(album.flac_file_size) %></label>
		    </form>
			<% end %>
			<% if album.wav_file_name %>
		    <form  name='generate_wav' action='/users/<%= @user.id %>' class="generate-form" >
		      <div>
		          <input type='hidden' name='wav_album_id' value=<%=album.id%>>
		          <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
		          <input type="image" name="wav_img" src="/images/wav.png" border="0" alt="Submit" class="generate-download-btn"/>
		      </div>
		    	<label><%= filesize(album.wav_file_size) %></label>
		    </form>
			<% end %>												
		</div>
	<%end%>
<%else%>
	<p>No albums yet. Take a look at our <a href="/">catalog</a>.</p>
<%end%>

<h2><u>Your Tracks</u></h2>
