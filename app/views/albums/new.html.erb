<div class="col-lg-6 portfolio-item log-in-form">
	<%if @user && @admins.include?(@user.email)%>
	  <h3>
	      <a href="#">Sign Up</a>
	  </h3>
	  <p>Enter details to become a member</p>
	  <form method="post" action="/albums">

	    <label>Album name</label><br>
	    <input type='textfield' name="name"><br>       
	    <label>Album art URL</label><br>
	    <input type='textfield' name="art_url"><br>
	    <label>Artists</label><p>format - John Smith, Judy Smart, and Kim Jones</p>
	    <input type='textfield' name="artists"><br>
	    <label>Year</label><br>
	    <input type='textfield' name="year"><br>
	    <label>Album description</label><br>
	    <input type='textarea' name="description"><br>
	    <label>FLAC archive URL</label><br>
	    <input type='textfield' name="flac_arch_url"><br>
	    <label>MP3 archive URL</label><br>
	    <input type='textfield' name="mp3_arch_url"><br>
	    <label>AAC archive URL</label><br>
	    <input type='textfield' name="AAC_arch_url"><br>
	    <label>OGG archive URL</label><br>
	    <input type='textfield' name="ogg_arch_url"><br>
	    <label>OTHER archive URL</label><br>
	    <input type='textfield' name="~~~arch_url"><br>
	    <label>Price</label><br>
	    <input type='number' step="0.01" name="price"><br>
	    <label>ISRC Code</label><br>
	    <input type='textfield' name="isrc"><br>
	    <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
	    <input type='submit' class='btn-md btn-warning'>

	  </form>
	<%else%>
		<p>Beep Boop. Access Denied</p>
	<%end%>
</div>
